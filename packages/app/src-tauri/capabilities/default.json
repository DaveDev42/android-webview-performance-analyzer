{
  "$schema": "https://schema.tauri.app/config/2/capabilities",
  "identifier": "default",
  "description": "Default capabilities for AWPA",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "mcp:default",
    "updater:default",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "adb",
          "cmd": "binaries/adb",
          "args": true,
          "sidecar": true
        },
        {
          "name": "system-adb",
          "cmd": "adb",
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "adb",
          "cmd": "binaries/adb",
          "args": true,
          "sidecar": true
        },
        {
          "name": "system-adb",
          "cmd": "adb",
          "args": true
        }
      ]
    }
  ]
}
