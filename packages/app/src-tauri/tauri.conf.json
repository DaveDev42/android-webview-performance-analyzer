{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AWPA",
  "version": "0.1.0",
  "identifier": "com.awpa.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1421",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "AWPA - Android WebView Performance Analyzer",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {},
    "externalBin": ["binaries/adb"],
    "createUpdaterArtifacts": true,
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQyOTE5MDg0QjEzQTlCQUQKUldTdG16cXhoSkNSUWh2M3ZRa1FON1lVb0FHSzRycDhPaEw5cXF0ZElxeUR0REdCb3YrSTNCZkYK",
      "endpoints": [
        "https://github.com/DaveDev42/android-webview-performance-analyzer/releases/latest/download/stable.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
